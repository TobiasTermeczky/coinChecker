<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textSymbol"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/price"
        app:layout_constraintLeft_toRightOf="@+id/imageMoney"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textPercentChange1h"
        android:layout_marginLeft="0dp" />

    <ImageButton
        android:id="@+id/btnRow"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/clearicon"
        android:src="@drawable/ic_clear"
        android:text="@string/remove"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSymbol"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/symbol"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPercentChange1h"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/percent_change_1h"
        app:layout_constraintTop_toTopOf="@+id/imageTrending"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imagePercent"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="0dp" />

    <ImageView
        android:id="@+id/imageTrending"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:contentDescription="@string/trending"
        app:srcCompat="@drawable/ic_trending_flat"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRow"
        app:layout_constraintRight_toLeftOf="@+id/textPercentChange1h"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageMoney"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/dollar"
        app:layout_constraintBottom_toBottomOf="@+id/textPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_dollar" />

    <ImageView
        android:id="@+id/imagePercent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/percent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_percent"
        app:layout_constraintTop_toTopOf="@+id/textPercentChange1h"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>